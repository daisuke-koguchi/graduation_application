<div class="container">
  <%= form_with(model:@exercise,local: true) do |f|%>
    <table class="table">
      <tbody>
        <tr>
          <th><%= f.label :name %></th>
          <td><%= f.text_field :name %></td>
        </tr>

        <tr>
          <th><%= f.label :description %></th>
          <td><%= f.text_area :description %></td>
        </tr>

        <tr>
          <th>運動負荷</th>
          <td>回数/時間/セット回数</td>
        </tr>

        <tr>
          <th><%= f.label :image %></th>
          <td><%= f.file_field :image %></td>
        </tr>

        <tr>
          <th><%= f.label :video %></th>
          <td><%= f.file_field :video %></td>
        </tr>

        <tr>
          <th>日付</th>
          <td>日付選択<td>
        </tr>
      </tbody>
    </table>
    <%= f.submit "登録する"%>
  <% end %>
</div>