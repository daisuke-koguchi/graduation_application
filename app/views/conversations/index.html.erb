<table>
  <head>
    <h2>メッセージ一覧</h2>
  </head>
  <body>
    <% @conversations.each do |conversation| %>
    <td>
      <% if conversation.target_user(current_user).present? %>
          <%= link_to conversation.target_user(current_user).name, conversation_messages_path(conversation)%>
      <% end %>
    </td>
  </body>
</table>