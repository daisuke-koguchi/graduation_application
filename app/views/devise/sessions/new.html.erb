<div class="container">
  <div class="row">
    <div class="col-12">
      <h2><%= t('.sign_in') %></h2>
    </div>
  <div class="col-6 offset-3 ">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email %><br />
      <small class="form-text">ご登録されたメールアドレスをご入力ください。</small>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg", placeholder: "例) rehamo@example.com"%>
    </div>

    <div class="form-group">
      <%= f.label :password %><br />
      <small class="form-text">ご登録されたパスワードをご入力ください。</small>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg" ,placeholder: "例) AbcDef0123"%>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit t('.sign_in'),class:"btn btn-info" %>
    </div>
  <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
