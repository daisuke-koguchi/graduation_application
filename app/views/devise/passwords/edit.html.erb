<div class="container">
  <div class="row">
    <div class="col-12">
      <h2><%= t('.change_your_password') %></h2>
    </div>
    <div class="col-7 offset-2">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="card">
          <div class="card-body">
            <div class="form-group">
              <%= f.label :password, t('.new_password') %>
              <small class="form-text">新しいパスワードを半角英数字6文字以上でご登録ください。</small>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password" , class: "form-control form-control-lg" ,placeholder: "例) AbcDef0123"%>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation, t('.confirm_new_password') %>
              <small class="form-text">確認のため、もう一度同じパスワードをご入力ください。</small> 
              <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "form-control form-control-lg" ,placeholder: "例) AbcDef0123"%>
            </div>
          
            <div class="actions">
              <%= f.submit t('.change_my_password'),class:"btn btn-secondary" %>
            </div>
            <% end %>
          </div>
        </div>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>