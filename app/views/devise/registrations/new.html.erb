<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <h2><%= t('.sign_up') %></h2>
    </div>
    <div class="col-6 offset-3 ">
      <%= form_with(model: @user, url:  users_sign_up_confirm_path(@user), local: true) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group ">
          <%= f.label :first_name ,class: "col-form-label" %>
          <small class="form-text">20文字以内でご登録できます。</small>
          <%= f.text_field :first_name, autofocus: true, class: "form-control form-control-lg ",placeholder: "姓"%>
        <div>
          <br>
        <div class="form-group">
          <%= f.label :last_name %>
          <small class="form-text">20文字以内でご登録できます。</small>
          <%= f.text_field :last_name, autofocus: true, class: "form-control form-control-lg",placeholder: "名"  %>
        <div>
          <br>
        <div class="form-group">
          <%= f.label :avatar_image %>
          <small class="form-text">写真は下記のボタンを押して選択してください。</small>
          <%= f.file_field :avatar_image %>
          <%= f.hidden_field :avatar_image_cache %>
        <div>
          <br>
        <div class="form-group">
          <%= f.label :introduction %>
          <small class="form-text">自己紹介は4000字まで入力することができます。</small>
          <%= f.text_area :introduction, autofocus: true, class: "form-control form-control-lg" ,placeholder: "自由記入欄"%>
        <div>
          <br>
        <div class="form-group">
          <%= f.label :email %>
          <small class="form-text">ご利用されているメールアドレスをご入力ください。</small>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg",placeholder: "rehamo@example.com" %>
        </div>
          <br>
        <div class="form-group">
          <%= f.label :password %>
          <small class="form-text">パスワードは半角英数字6文字以上でご登録できます。</small>  
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg" ,placeholder: "AbcDef0123"%>
        </div>
          <br>
        <div class="form-group">
          <%= f.label :password_confirmation %>
          <small class="form-text">確認のため、もう一度同じパスワードをご入力ください。</small>  
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg",placeholder: "AbcDef0123" %>
        </div>
          <br>
        <div class="actions">
          <%= f.submit t('.sign_up') %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
  </div>
</div>